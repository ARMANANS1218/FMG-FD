# Vite React SPA rewrite rules for cPanel/Apache
# Place this .htaccess inside /public so it is copied to dist/
# Upload dist contents into /FMG/ on the server.

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /FMG/

  # Allow existing files and directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Allow requests for assets (js, css, images, fonts, etc.)
  RewriteCond %{REQUEST_URI} \.(js|css|png|jpg|jpeg|gif|ico|svg|webp|woff|woff2|ttf|eot|map)$ [NC]
  RewriteRule ^ - [L]

  # Allow requests to /assets/ directory (Vite output chunks)
  RewriteCond %{REQUEST_URI} ^/FMG/assets/
  RewriteRule ^ - [L]

  # Allow specific routes that don't need rewriting
  RewriteCond %{REQUEST_URI} ^/FMG/(api|public)/ [NC]
  RewriteRule ^ - [L]

  # Route all other requests to index.html for SPA client routing
  RewriteRule ^ /FMG/index.html [L]
</IfModule>

# Add MIME types for assets
<IfModule mod_mime.c>
  AddType application/javascript js
  AddType text/css css
  AddType image/svg+xml svg svgz
  AddEncoding gzip svgz
</IfModule>

# Prevent caching of the HTML entry point so new chunk hashes load
<IfModule mod_headers.c>
  <Files "index.html">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </Files>
</IfModule>

# Cache settings for static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
  ExpiresByType font/woff2 "access plus 1 month"
  ExpiresByType font/woff "access plus 1 month"
</IfModule>

